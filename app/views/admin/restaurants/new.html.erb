<div class="container">
<%= form_with(model:@restaurant, url: admin_restaurants_path) do |f| %>
	<%#= render 'layouts/error_messages', resource: item %>
	<div class="flex align-items-center justify-content-center">
		<div>
			<%= f.label :image, "画像" %>
			<div class="image_field">
				<%= image_tag (@restaurant.image.attached? ? @restaurant.image : 'no-image.png'), id: "img_prev", class: "admin_restaurant_image" %>
				<span class="btn btn-file btn-info"><%= f.file_field :image,  accept:'image/*' %></span>
			</div>
		</div>
		<table class="admin_restaurant_info restaurant_form">
			<thead>
				<tr>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td><%= f.label :name, "店舗名" %></td>
					<td><%= f.text_field :name %></td>
				</tr>
				<tr>
					<td><%= f.label :business_time, "営業時間" %></td>
					<td><%= f.text_field :business_time, rows: 3 %></td>
				</tr>
				<tr>
					<td><%= f.label :price, "平均予算" %></td>
					<td><%= f.number_field :price %> 円〜</td>
				</tr>
				<tr>
					<td><%= f.label :telephone_number, "電話番号" %></td>
					<td><%= f.text_field :telephone_number %></td>
				</tr>
				<tr>
					<td><%= f.label :address, "住所" %></td>
					<td><%= f.text_field :address %></td>
				</tr>
				<tr>
					<td><%= f.label :sales_status, "表示ステータス" %></td>
					<td class="select_field">
						<%= f.radio_button :is_active, true %>
						<%= f.label :is_active, "有効", class: "text-active" %>
						<%= f.radio_button :is_active, false %>
						<%= f.label :is_active, "無効", class: "text-invalid" %>
					</td>
				</tr>
			</tbody>
		</table>
		<div class="flex align-center pl5">
			<%= f.submit "submit", class: "btn btn-primary" %>
		</div>
	</div>
<% end %>
</div>