<div class="container">
  <h3>ジャンル一覧・追加</h3>
  <div class="row px-3 py-2">
    <p>新規登録 <p>
    <%= form_with model:@genre,url:admin_genres_path do |f| %>
    <%= f.text_field :name %>
    <%= f.submit '新規登録',class:"admin-btn" %>
    <% end %>
  </div>

  <div class="row mb-3">
    <div class="col-sm-7">
      <table class="table">
        <thead>
          <th>ジャンル</th>
          <th></th>
        </thead>
        <tbody>
         <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= genre.name %>
            </td>
           <td>
             <%= link_to "編集する",edit_admin_genre_path(genre.id) %>
           </td>
          </tr>
         <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>
