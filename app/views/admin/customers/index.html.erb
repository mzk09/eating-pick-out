<div class="container">
	<h3>会員一覧</h3>
	<div class="admin-page">
		<table class="table table-sm">
			<thead>
				<th>会員ID</th>
				<th>名前</th>
				<th>会員ステータス</th>
				<th></th>
			</thead>
			<tbody>
				<% @customers.each do |customer| %>
					<tr>
						<td><%= customer.id %></td>
						<td><%= customer.name %></td>
						<td>
							<% if customer.is_deleted? %>
								<span class="text-active">退会済み</span>
							<% else %>
								<span class="text-invalid">有効</span>
							<% end %>
						</td>
						<td class="admin-btn"><%= link_to "詳細", admin_customer_path(customer), class: "btn" %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>