<section class="container">
	<h3>レビュー詳細・編集</h3>
	<div class="admin-page">
		<%= form_with(model:@review, url: admin_review_path(@review.id)) do |f| %>
		<table class="admin_review_info">
			<thead>
				<tr>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>評価</td>
					<td><div id="star-rate"></div></td>
					<script>
						$('#star-rate').empty();
						$('#star-rate').raty({
							size      : 36,
							starOff   : '<%= asset_path('star-off.png') %>',
							starOn    : '<%= asset_path('star-on.png') %>',
							half      : false,
							readOnly  : true,
							score: <%= @review.rate %>,
						});
					</script>
				</tr>
				<tr>
					<td>コメント</td>
					<td><%= f.text_field :comment %></td>
				</tr>
				<tr>
					<td><%= f.label :sales_status, "表示ステータス" %></td>
					<td class="select_field">
						<%= f.radio_button :is_active, true %>
						<%= f.label :is_active, "有効", value: true, class: "text-active" %>
						<%= f.radio_button :is_active, false %>
						<%= f.label :is_active, "無効", value: false, class: "text-invalid" %>
					</td>
				</tr>
			</tbody>
		</table>
		<div class="flex align-center pl5">
			<%= f.submit "変更を保存", class: "admin-btn" %>
		</div>
		<% end %>
	</div>
</section>